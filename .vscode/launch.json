    "version": "0.2.0",
    "configurations": [
        {
            "name": "lbaf:run",
            "python": "${workspaceFolder}/venv/bin/python",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/lbaf/__init__.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [ "--configuration", "conf.yaml"  ]
        },
        {
            "name": "lbaf:current_file",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [ ]
        }
    ]
}